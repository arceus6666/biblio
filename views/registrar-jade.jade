extends ./layout.jade
block contenido
    h1 Registrar Datos
    form(action="/guardar", method="POST")
        label(for="nombre") Nombre:
        input(type="text", name="nombre", id="nombre", placeholder="Ingrese su nombre")
        br
        label(for="last_name") Apellido:
            input(type="text", name="last_name", id="last_name", placeholder="Ingrese su apellido")
        br
        label(for="age") Edad:
            input(type="number", name="age", id="age", placeholder="Ingrese su edad")
        br
        input(type="submit" value="Registrar")