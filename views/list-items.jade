extends ./layout.jade
block contenido
    h1 Lista Personas
    for persona in personas
        div!= persona.nombre
            span --
            a(href="/editar-jade/#{persona._id}") Editar
            span --
            form(action="/eliminar-jade/#{persona._id}?_method=DELETE", method="POST") 
                input(type="submit", value="Eliminar")