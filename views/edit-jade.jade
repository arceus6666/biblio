extends ./layout.jade
block contenido
    h1 Editar Datos
    form(action="/modificar-jade/#{persona._id}", method="POST")
        label(for="nombre") Nombre:
            input(type="text", name="nombre", id="nombre", placeholder="Ingrese su nombre" value="#{persona.nombre}")
        br
        label(for="last_name") Apellido:
            input(type="text", name="last_name", id="last_name", placeholder="Ingrese su apellido" value="#{persona.apellido}")
        br
        label(for="age") Edad:
            input(type="number", name="age", id="age", placeholder="Ingrese su edad" value="#{persona.edad}")
        br
        input(type="submit" value="Actualizar")